<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        />
    <ImageView
        android:id="@+id/splash_animation"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@anim/splash"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#ffffff"
        android:text="From the makers of Quiz Bang"
        android:id="@+id/splashTx"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="25sp"
        android:textStyle="italic"
        android:typeface="serif"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pdazzle" />


    <ImageView
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/and" />


    <ImageView
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/thegoatwhisperer" />


</LinearLayout>