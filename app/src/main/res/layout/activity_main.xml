<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SimonActivity"
    android:weightSum="1"
>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="High Score: 0"
        android:textColor="#ffffff"
        android:id="@+id/highScore"
        android:layout_weight="0.15"
        android:gravity="center_vertical|center_horizontal" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/green_off"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:layout_weight="1"
                android:background="#000000" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/red_off"
                android:clickable="true"
                android:layout_weight="1"
                android:background="#000000" />
        </TableRow>



        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yellow_off"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_marginTop="10dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blue_off"
                android:clickable="true"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_marginTop="10dp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:text="Round 1"
        android:textColor="#ffffff"
        android:id="@+id/round" />
    <TextView
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ffffff"
        android:id="@+id/countdown" />

    <!--   <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="right"
           android:weightSum="1">

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Start"
               android:id="@+id/start"
               android:layout_weight="1" />

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Stop"
               android:id="@+id/stop" />
       </LinearLayout>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startBtn"
            android:src="@drawable/start"
            android:layout_weight="1"
            android:background="#00ff162a" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/demoBtn"
            android:src="@drawable/reset"
            android:layout_weight="1"
            android:background="#00ff162a" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopBtn"
            android:src="@drawable/stop"
            android:layout_weight="1"
            android:background="#00ff162a" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="3">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:gravity="top|center_vertical|center_horizontal"
            android:id="@+id/startTx" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demo"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/demoTx" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/stopTx" />
    </LinearLayout>



</LinearLayout>
